@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "AddNewCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddNewCategory", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    @Html.Label("Kategori Hakkında")
    @Html.TextAreaFor(x => x.CategoryDetails, 20, 10, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">KAYDET</button>
}

