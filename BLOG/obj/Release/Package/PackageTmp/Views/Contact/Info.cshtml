@model IEnumerable<EntityLayer.Concrete.About>
<div class="col-md-5">

    <div class="p-4 mb-3 bg-white">
        @foreach (var item in Model)
        {

        <p class="mb-0 font-weight-bold">Telefon</p>
        <p class="mb-4"><a href="#">@item.Phone</a></p>

        <p class="mb-0 font-weight-bold">E-Posta</p>
        <p class="mb-0"><a href="#">@item.Mail</a></p>
        }
    </div>

</div>
